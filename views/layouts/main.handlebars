<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Tech Blog</title>
	<link rel="stylesheet" href="/css/base_styles.css">
	<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

</head>

<body>
	<div class="header d-flex justify-content-between">
		<div>
			<a href="/"><i class="bi bi-cpu"></i> tech blog</a>
		</div>
		<div>
		{{#if logged_in}}
			<small class="text-secondary mx-2">Logged in as {{user_name}}</small>
			<button class="btn btn-sm btn-outline-secondary" id="logout" >logout</button>
		{{else}}
			<button class="btn btn-sm btn-outline-secondary" id="login" data-bs-toggle="modal" data-bs-target="#staticBackdrop">login to post</button>
		{{/if}}
		</div>
	</div>
	<main class="container mt-4">
		{{{ body }}}
	</main>
	<footer class="d-flex justify-content-between">
		<div class="m-4">
			Â© 2021 <a style="text-decoration: none" href="https://n8blake.com">n8blake</a>
		</div>
	</footer>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">LOGIN</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
        	<div class="mb-3" id="new-user-field-user-name">
			  <label for="username-login" class="form-label">User Name</label>
			  <input type="text" class="form-control" id="username-login" placeholder="username">
			</div>
			<div class="mb-3">
			  <label for="password" class="form-label">Password</label>
			  <input type="password" class="form-control" id="password-login" placeholder="password">
			</div>
			<div class="mb-3" id="new-user-field-validate-password">
			  <label for="password-verification" class="form-label">Retype Password</label>
			  <input type="password" class="form-control" id="password-verification" placeholder="retype password">
			</div>
			<div class="mb-3" id="error-message-container" style="display: none;">
				<p class="text-danger" id="error-message"></p>
			</div>
        </form>
      </div>
      <div class="modal-footer d-flex justify-content-between">
      	<div class="form-check">
		  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
		  <label class="form-check-label" for="flexCheckDefault">
		    New Account
		  </label>
		</div>
		<div>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form class="login-form" style="display: inline;">
        	<button type="submit" class="btn btn-primary">Submit</button>
        </form>
    	</div>
      </div>
    </div>
  </div>
</div>

	{{#if logged_in}}
	<script src="/js/logout.js"></script>
	<script src="/js/comment.js"></script>
	{{else}}
	<script src="/js/login.js"></script>
	{{/if}}
</body>

</html>
